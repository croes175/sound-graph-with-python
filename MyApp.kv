
<LoginScreen>
	sliderF: sliderF
	sliderA: sliderA
	sliderP: sliderP
	image: image
	ventana1: ventana1
    id: Prueba


	BoxLayout:
		orientation: "horizontal"
		BoxLayout:
			Label:
	        	id: Frecuency
	        	text: "Frecuencia  "+str(sliderF.value)+" Hz"

	        Slider:
		        id: sliderF
		        min: 0
		        max: 1000
		        step: 1
		        orientation: 'vertical'
	        Label:
	        	id: Amplitud
	        	text: "Amplitud  "+str(sliderA.value)

	        Slider:
		        id: sliderA
		        min: 0
		        max: 300
		        step: 1
		        orientation: 'vertical'
			Label:
	        	id: Phase
	        	text: "Phase "+str(sliderP.value)

	        Slider:
		        id: sliderP
		        min: 0
		        max: 1.52
		        step: 0.1
		        orientation: 'vertical'	
		        
		        on_touch_move: a=1
		        


	        Button:
	            text: "PUSH ME"
	            on_press: Prueba.tono()	
	            
	                    
	       
	        Button:
	        	text: "Exit"
	        	on_press: root.manager.current='Intro'


			Spinner:
				id : ventana1
		        size_hint: None, None
		        size: 100, 44
		        pos_hint: {'center': (.5, .5)}
		        text: 'windows'
		        values: 'hamming', 'blackman', 'tukey', 'exponential'
		        on_text:
		            print("The spinner {} has text {}".format(self, self.text))


        
		    	
    	Image:
			id: image
			source: "line.gif"
			size: Prueba.width/2, Prueba.height/2
			pos: 0, Prueba.height/4
			allow_stretch: True
			anim_delay: -1
			anim_loop: 1




<Intro>
	id: intro
	text: "Hola"
	Button:
	    text: "PUSH ME"
	    on_press: root.manager.current='menu'
	
	BoxLayout:
		Button:
	        text: "Sonidos"
	        on_press: root.manager.current='menu'
			







